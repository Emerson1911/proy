<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyect.Views.ClientePage"
             Title="ClientePage">
    
    <ScrollView VerticalOptions="CenterAndExpand">
    <VerticalStackLayout Margin="5">
        
        <Label Text="Formulario Clientes" FontSize="30" HorizontalOptions="Center"/>

        <Label Text="Nombre" FontSize="15"/>
        <Entry />
        <Label Text="Dui" FontSize="15"/>
        <Entry />
        <Label Text="Telefono" FontSize="15"/>
        <Entry />
        <Label Text="Telefono 2" FontSize="15"/>
        <Entry />
        <Label Text="Correo electronico" FontSize="15"/>
        <Entry />
        
        <Label Text="Datos del dispositivo" FontSize="30" HorizontalOptions="Center"/>
        
        <Label Text="Modelo" FontSize="15"/>
        <Entry />
        <Label Text="Marca" FontSize="15"/>
        <Entry />
        <Label Text="Estado" FontSize="15"/>
        <Entry />
        <Label Text="Diagnostico" FontSize="15"/>
        <Entry />
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>